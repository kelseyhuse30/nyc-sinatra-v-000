<h1>Add a new Figure</h1>
 
<form action="/figures" method="post">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br></br>

  <label>Choose title(s)</label>
  <% Title.all.each do |title| %>
    <label><%=title.name%></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"></input>
  <%end%>
  <br></br>

  <label>Or add new title</label>
  <input type="text" name="title[name]" id="new_title"></input>

  <label>Choose landmark(s)</label>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>
  <br></br>

  <label>Or add new landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input><br></br>
  <input type="submit" value="Create New Figure">
</form>